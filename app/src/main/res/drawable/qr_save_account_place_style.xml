<?xml version="1.0" encoding="utf-8"?><!-- res/drawable/button_style.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Внутрішня частина біла -->
            <corners android:radius="10dp" /> <!-- Задає радіус заокруглення -->
        </shape>
    </item>
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Прозорий -->
            <stroke
                android:width="1dp"
                android:color="@color/blue" /> <!-- Синя окантовка -->
            <corners android:radius="10dp" /> <!-- Задає радіус заокруглення -->
        </shape>
    </item>
</layer-list>
