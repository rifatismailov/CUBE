<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Колір для активного стану (коли поле в фокусі і користувач вводить текст) -->
    <item android:color="@color/blue" android:state_empty="false" android:state_focused="true" />
    <!-- Колір для неактивного стану (коли поле не в фокусі і текст не введено) -->
    <item android:color="@color/light_gray" android:state_empty="true" android:state_focused="false" />
</selector>
