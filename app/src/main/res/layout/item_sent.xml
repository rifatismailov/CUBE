<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="60dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp">

    <!-- Основний контейнер для повідомлення -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="@drawable/sent_drawable"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Зображення (наприклад, фото або картинка в повідомленні) -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.cube.draw.LoadingImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:maxWidth="350dp"
                android:maxHeight="250dp"
                android:scaleType="center"
                app:crossColor="@color/light_blue"
                app:crossThickness="5dp"
                app:progressColor="@color/blue"
                app:progressThickness="5dp"
                app:shapeAppearanceOverlay="@style/AppTheme.CornerCutRight"
                app:strokeWidth="2dp" />

            <LinearLayout
                android:id="@+id/aboutFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:orientation="vertical"

                android:padding="8dp">

                <!-- Тип файлу -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">

                    <TextView
                        android:id="@+id/fileType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ibmplexsans_medium"
                        android:text="Type File"
                        android:textColor="#54585b"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Розмір файлу -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">


                    <TextView
                        android:id="@+id/fileSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ibmplexsans_medium"
                        android:text="Size: 1.2 MB"
                        android:textColor="@color/blue"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Дата створення -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">


                    <TextView
                        android:id="@+id/fileDateCreate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ibmplexsans_medium"
                        android:text="Create: 2024-12-23"
                        android:textColor="@color/blue"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Хеш-файл -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">

                    <TextView
                        android:id="@+id/fileHash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notoserif_thin"
                        android:text="Хеш: abcd1234..."
                        android:textColor="#54585b"
                        android:textSize="14sp" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/file_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ibmplexsans_bold"
                android:gravity="top"
                android:paddingLeft="10dp"
                android:paddingTop="1dp"
                android:paddingRight="10dp"
                android:paddingBottom="1dp"
                android:textColor="@color/blue"
                android:textSize="16sp" />
        </LinearLayout>


        <!-- Повідомлення з текстом і файлом -->
        <LinearLayout
            android:id="@+id/messageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_medium"
                android:gravity="top"
                android:paddingLeft="10dp"
                android:paddingTop="1dp"
                android:paddingRight="10dp"
                android:paddingBottom="1dp"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Додаткові індикатори -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/feel_layout"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="invisible">

                <com.example.cube.draw.MessageNotifierView
                    android:id="@+id/messageNotifier"
                    android:layout_width="35sp"
                    android:layout_height="15sp"
                    app:alignStart="true"
                    app:spacing="5dp" />

                <ImageView
                    android:id="@+id/feeling"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="15sp"
                    android:fontFamily="@font/ibmplexsans_medium"
                    android:gravity="left"
                    android:text="Time"
                    android:textColor="#676a6b"
                    android:textSize="10sp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
